<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/loginCard"
    app:cardCornerRadius="@dimen/loginCardRadius"
    android:elevation="5dp"
    android:layout_gravity="center"
    android:layout_marginTop="@dimen/loginViewsMargin"
    android:layout_marginBottom="@dimen/loginViewsMargin"
    android:background="@color/whiteCardColor">



    <LinearLayout
        style="@style/linearParent"
        android:layout_gravity="center"
        android:padding="@dimen/loginViewsMargin">

        <TextView
            style="@style/headerTextPrimary"
            android:text="Forget Password"
            android:layout_marginTop="@dimen/loginViewsMargin"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputEmail"
            style="@style/parent"
            android:layout_marginTop="@dimen/loginViewsMargin">
            <EditText
                android:id="@+id/etEmail"
                style="@style/modifiedEditText"
                android:inputType="phone"
                android:maxLines="1"
                android:maxLength="10"
                android:hint="Registered Mobile Number"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/txtSendOtp"
            style="@style/parent"
            android:textStyle="bold"
            android:textColor="@color/primaryTextColor"
            android:text="Send OTP"
            android:textSize="@dimen/_13sdp"
            android:gravity="end"
            android:layout_marginTop="@dimen/_10sdp"/>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/parent"
            android:id="@+id/enterotp"
            android:visibility="gone"
            android:layout_marginTop="@dimen/signup_text_margin_top">
            <EditText
                android:id="@+id/etOtp"
                style="@style/modifiedEditText"
                android:inputType="phone"
                android:maxLength="10"
                android:maxLines="1"
                android:hint="Enter OTP"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputPassword"
            style="@style/parent"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/primaryTextColor"
            android:layout_marginTop="@dimen/loginViewsMargin">
            <EditText
                android:id="@+id/etPassword"
                style="@style/modifiedEditText"
                android:hint="New Password"
                android:maxLines="1"
                android:inputType="textPassword"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputcPassword"
            style="@style/parent"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/primaryTextColor"
            android:layout_marginTop="@dimen/signup_text_margin_top">
            <EditText
                android:id="@+id/etcPassword"
                style="@style/modifiedEditText"
                android:hint="@string/login_cpassword_hint"
                android:inputType="textPassword"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnChangePassword"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/login_button_bk"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp"
            android:textAllCaps="false"
            android:text="Change Password"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/loginViewsMargin"/>



    </LinearLayout>
</androidx.cardview.widget.CardView>