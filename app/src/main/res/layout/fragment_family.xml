<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="@dimen/_10sdp"
    tools:context=".Fragment.FamilyFragment">

    <ImageView
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:src="@drawable/family_tree"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You have an empty family. Start adding \n persons and relationships."
        android:textAlignment="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/black"/>
    
    <Button
        android:id="@+id/btnFamilyInfo"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="@dimen/_33sdp"
        android:text="Edit family info"
        android:textAllCaps="false"
        android:textSize="@dimen/_13sdp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/login_button_bk"
        android:layout_marginTop="@dimen/_18sdp"
        android:drawableStart="@drawable/ic_baseline_home_24"
        android:paddingStart="@dimen/_18sdp"
        android:paddingEnd="@dimen/_18sdp"
        android:drawablePadding="@dimen/_1sdp"/>

    <Button
        android:id="@+id/btnAddPerson"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="@dimen/_33sdp"
        android:text="Add Person"
        android:textAllCaps="false"
        android:textSize="@dimen/_13sdp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/login_button_bk"
        android:layout_marginTop="@dimen/_10sdp"
        android:drawableStart="@drawable/ic_baseline_person_add_24"
        android:paddingStart="@dimen/_18sdp"
        android:paddingEnd="@dimen/_18sdp"
        android:drawablePadding="@dimen/_1sdp"/>



</LinearLayout>