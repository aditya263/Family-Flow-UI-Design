<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp"
    tools:context=".PrivacySettings">

    <TextView
        android:layout_width="@dimen/_280sdp"
        android:layout_height="wrap_content"
        android:text="Who can see my family info"
        android:textAllCaps="true"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorPrimaryDark"/>

    <LinearLayout
        android:id="@+id/linearFamilyTree"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="@dimen/_43sdp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_15sdp">

        <TextView
            android:layout_width="@dimen/_280sdp"
            android:layout_height="wrap_content"
            android:text="Family tree is visible to"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="@dimen/_280sdp"
            android:layout_height="wrap_content"
            android:text="Everybody"
            android:textSize="@dimen/_12sdp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/colorAccent"/>

    <LinearLayout
        android:id="@+id/linearMessage"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="@dimen/_43sdp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_10sdp">

        <TextView
            android:layout_width="@dimen/_280sdp"
            android:layout_height="wrap_content"
            android:text="I can receives message from"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="@dimen/_280sdp"
            android:layout_height="wrap_content"
            android:text="Relatives"
            android:textSize="@dimen/_12sdp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/colorAccent"/>

    <LinearLayout
        android:id="@+id/linearPhotos"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="@dimen/_43sdp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_10sdp">

        <TextView
            android:layout_width="@dimen/_280sdp"
            android:layout_height="wrap_content"
            android:text="Uploaded photos are visible to"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="@dimen/_280sdp"
            android:layout_height="wrap_content"
            android:text="Nobody"
            android:textSize="@dimen/_12sdp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/colorAccent"/>

</LinearLayout>